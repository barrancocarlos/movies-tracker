{{> header}}

<section id="latest">
  <div class="container">
    <div class="block">
      <div class="row justify-content-center">
        <div class="col-md-6">

          <h1>Edit Movie</h1>

          <form class="form-group movie-form" method="post" enctype="multipart/form-data" action="/api/movies/{{movie.id}}?_method=PUT">

            <input type="text" class="form-control" placeholder="Title" name="title" required="true" required value="{{movie.title}}">
            <select type="text" class="form-control" style="margin-top:5%;" name="genre">

                      {{#each listofgenre}}
                      {{#if_eq ../movie.genre.name name}}
                        <option value={{_id}} selected>{{name}}</option>
                       {{else}}
                        <option value={{_id}}>{{name}}</option>
                       {{/if_eq}}
                       {{/each}}
            </select>
            <input type="text" class="form-control" style="margin-top:5%;" name="year" placeholder="Year" required value="{{movie.year}}">
            <select type="text" class="form-control" style="margin-top:5%;" name="priority" placeholder="Priority" required value="{{movie.priority}}">
                        <option value="Low">Low</option>
                        <option value="High">High</option>
            </select>
            <label for="photo">Photo</label>
            <input type="file" class="form-control-file" name="photo" value="{{profile.photo}}">
            <ul class="download-btn add-buttons" style="margin-top:5%;">
              <li>
                <a href="/" class="btn btn-default btn-windows"> <i class="fa fa-arrow-left"></i>Back</a>
              </li>
              <li>
                <button type="submit" class="btn btn-default btn-andriod"><i class="fa fa-floppy-o"></i> Submit</button>
              </li>
            </ul>

          </form>
        </div>
      </div>
    </div>
  </div>
</section>
{{> footer}}
