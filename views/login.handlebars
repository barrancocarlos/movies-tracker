<section id="latest">
  <div class="login-back">
  <div class="container">
    <div class="block">
      <div class="row justify-content-center">
        <div class="col-md-6 login-box">

          <h1>Login</h1>

          <!-- show any messages that come back with authentication -->
          {{#if message}}
            <div class="alert alert-danger">{{message}}</div>
          {{/if}}

          <!-- form -->
          <form action="/login" method="post">
            <div class="form-group movie-form">
              <input type="text" class="form-control" name="email" placeholder="Email" required>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            <ul class="download-btn add-buttons" style="margin-top:5%;">
              <li>
                <button type="submit" class="btn btn-default btn-andriod"><i class="fa fa-floppy-o"></i> Submit</button>
              </li>
            </ul>
          </form>

          <h4 class="text-left">Need an account? <a href="/signup">Signup</a></h4>

        </div>
      </div>
    </div>
  </div>
</div>
</section>
